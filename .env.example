# private key of the account that deployed the zkapp
FEE_PAYER_PRIVATE_KEY=

# Deployed zkApp contract address
ZKAPP_ADDRESS=B62qimFSLYCughbnPUY3Qy5eGsRGvjVQAY1TgTHkH8SJTcdE55C5X1G

# PostgreSQL connection string
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/authenticity_dev

# Mina network (testnet or mainnet)
MINA_NETWORK=testnet

# API server port
PORT=3000

# Environment (development, production, test)
NODE_ENV=development

# Max upload size in bytes (10MB default)
UPLOAD_MAX_SIZE=10485760

# CORS allowed origins
CORS_ORIGIN=*

# MinIO S3 storage configuration
MINIO_ENDPOINT=http://localhost:9000
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
# this bucket must be created manually
MINIO_BUCKET=authenticity-local

# Admin API password
# admin-dashboard will set BACKEND_API_KEY=admin:serverpass
ADMIN_PASSWORD=serverpass

# Blockchain monitoring configuration
ARCHIVE_NODE_ENDPOINT=https://api.minascan.io/archive/devnet/v1/graphql
MINA_NODE_ENDPOINT=https://api.minascan.io/node/devnet/v1/graphql

# Enable blockchain transaction monitoring worker (runs every 5 minutes to track tx status)
# Set to false to disable monitoring and save resources
MONITORING_ENABLED=true


# Number of retry attempts for failed proof generation jobs (default: 3)
WORKER_RETRY_LIMIT=3
# Temporary directory for downloaded images during processing (default: /tmp)
WORKER_TEMP_DIR=/tmp
