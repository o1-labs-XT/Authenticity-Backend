# Copy this to .env.local for local development

# Backend API URL
NEXT_PUBLIC_API_URL=http://localhost:3000

# Dashboard login credentials (protects access to this admin UI)
# Users enter these credentials to access the dashboard frontend
ADMIN_USERNAME=admin
ADMIN_PASSWORD=pass

# Backend API authentication (for requests from Next.js server to backend API)
# Format: username:password (e.g., admin:serverpass)
# The password must match ADMIN_PASSWORD in the backend's .env file
BACKEND_API_KEY=admin:serverpass